{% comment %}
  Section: Responsive Collection Nav Bar
  Description: Displays collection links as a horizontal nav bar on desktop and a mini section with images on mobile.
  Best for: Spotlight theme, Shopify Online Store 2.0
{% endcomment %}

<section class="collection-nav-section">
  <div class="page-width">
    <nav class="collection-nav__desktop hidden md:flex justify-start gap-6 py-4 border-b border-gray-200 overflow-x-auto">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="font-bold text-sm text-gray-800 hover:text-red-600 whitespace-nowrap">
          {{ block.settings.title }}
        </a>
      {% endfor %}
    </nav>

    <div class="collection-nav__mobile flex md:hidden gap-4 overflow-x-auto py-4">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="flex-shrink-0 text-center w-24">
          <div class="aspect-square overflow-hidden rounded-md border border-gray-200 shadow-sm">
            <img src="{{ block.settings.image | img_url: '160x160' }}" alt="{{ block.settings.title }}" class="w-full h-full object-cover" />
          </div>
          <span class="block mt-1 text-xs font-medium text-gray-700 leading-tight">{{ block.settings.title }}</span>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

